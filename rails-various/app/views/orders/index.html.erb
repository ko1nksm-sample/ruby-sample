<h1><%= t '.order_list' %></h1>

<table>
  <tr>
    <td><%= t 'view.number' %></td>
    <td><%= Order.human_attribute_name :name %></td>
    <td><%= Order.human_attribute_name :address %></td>
    <td><%= Detail.human_attribute_name :quantity %></td>
    <td><%= t 'view.action' %></td>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.id, order %></td>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.details.length %></td>
    <td>
      <%= link_to t('view.edit'), [:edit, order] %>
      <%= link_to t('view.delete'), order, method: :delete, data: {confirm: I18n.t("view.delete?")} %>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to t('.new_order'), new_order_path %>
